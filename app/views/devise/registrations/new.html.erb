<div class="page-container" style="display:flex; justify-content:center; align-items:center;">
  <div class="sign-in-box">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first-name", id: "user_first_n" }%>
          <br>
          <%= f.input :last_name,
                      required: true,
                      input_html: { autocomplete: "last-name", id: "user_last_n" }%>
          <br>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", id: "reg-email" }%>
          <br>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <br>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        <br>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "signup-button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
