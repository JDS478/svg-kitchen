
<div class="recipe-card">

  <div class="rec-card-img">
    <%= link_to recipe_path(recipe), class: "recipe-linker" do %>
      <img style="border-radius: 6px;" src="https://preppykitchen.com/wp-content/uploads/2022/05/Naked-Cake-Recipe-Card.jpg" alt="ROTD" class="rec-img">
    <% end %>
  </div>

  <br>

  <div class="card-info">
    <div class="info-sect">Category: <%= recipe.category.title %></div> <div class="info-sect">Difficulty: <%= recipe.difficulty %></div>
  </div>

  <br>

  <div class="recipe-card-desc">
    <%= recipe.desc %>
  </div>

</div>
