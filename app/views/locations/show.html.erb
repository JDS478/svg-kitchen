<br>
<div class="page-container"
  style="height:fit-content; display:flex; justify-content:space-between;">
  <div class="location-img-box">
    <% if @location.photo.key %>
      <%= cl_image_tag(@location.photo.key, class: "loc-show-img") %>
    <% else %>
      <img src="https://media.istockphoto.com/id/1283026526/photo/front-view-on-a-bakery-shop-building-on-a-piece-of-ground-3d-illustration.jpg?s=612x612&w=0&k=20&c=BeasxYNKUnwNLGcldcZ4JqY1DvDdQi0Ytlzcn8PDVSY="
      alt="default bakery image" class="loc-show-img">
    <% end %>
  </div>

  <h1 class="fp-title"><%= @location.name %></h1>

  <div class="location-content">
    <h3 class="loc-cont-title">Address</h3>
    <%= @location.address %>
    <br>
    <h3 class="loc-cont-title">About</h3>
    <%= @location.description %>
  </div>
</div>

<br>
<%# TODO add a map with ONLY current food place marker %>

<div class="page-container">

  <h2 class="loc-rev-header"><%= @location.comments.length > 0 ? 'Reviews' : 'No Reviews Yet!' %></h2> <br>

  <div class="location-review-box">
    <% @comments.each do |comment| %>
      <%= render partial: 'comments/comment_card', locals: {comment: comment} %>
    <% end %>
  </div>

  <br>

  <% if user_signed_in? && @user_comments.count <= 3 %>
    <%= render 'comments/form' %>
  <% end %>
</div>
