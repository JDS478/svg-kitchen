<div id="map" style="width:100%; height:500px;"
data-controller="map"
data-map-api-key-value="<%=ENV['MAPBOX_API_KEY'] %>"
data-map-markers-value="<%= @markers.to_json %>"
></div>

<br>

  <div class="query-box" style="margin: 0 auto; width:fit-content;">
    <form action="/locations" class="search-form">
      <input type="text" class="search-box" name="query">
      <input type="submit" value="search" class="search-button">
    </form>
  </div>

<br>

<div class="page-container"
style="height:fit-content; display:flex; flex-wrap:wrap; justify-content:space-evenly;">
  <% @food_places.each do |place| %>
    <%= render partial: 'location_card', locals: {place: place} %>
  <% end %>
</div>
